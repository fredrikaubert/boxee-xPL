<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="script.xpl.plugin"
       name="xPL plugin"
       version="0.1"
       provider-name="w">
  <requires>
    <import addon="xbmc.python" version="1.0"/>
  </requires>
  <extension point="xbmc.service"
             library="default.py" start="login|startup">
  </extension>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <summary lang="en">Will send xpl messages when playing media to allow you to switch on or off lights based on xbmc status.</summary>
  </extension>
</addon>
